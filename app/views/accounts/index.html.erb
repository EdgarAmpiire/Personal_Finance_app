<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-semibold">Accounts</h1>
  <%= link_to "New account", new_account_path, class: "rounded bg-black text-white px-4 py-2" %>
</div>

<% if @accounts.any? %>
  <div class="space-y-3">
    <% @accounts.each do |account| %>
      <div class="rounded-xl border bg-white p-4 flex items-center justify-between">
        <div>
          <div class="font-medium">
            <%= link_to account.name, account_path(account), class: "hover:underline" %>
          </div>
          <div class="text-sm text-gray-600"><%= account.account_type %></div>
        </div>

        <div class="flex items-center gap-3">
          <div class="font-semibold"><%= number_to_currency(account.balance) %></div>

          <%= link_to "Edit", edit_account_path(account), class: "rounded border px-3 py-1 text-sm" %>

          <%= button_to "Delete", account_path(account), method: :delete,
                class: "rounded bg-red-600 text-white px-3 py-1 text-sm",
                data: { turbo_confirm: "Delete this account? This will also delete its transactions." } %>
        </div>
        
      </div>
    <% end %>
  </div>
<% else %>
  <div class="rounded-xl border bg-white p-6">
    <p class="text-gray-600">No accounts yet. Create one to get started.</p>
  </div>
<% end %>
