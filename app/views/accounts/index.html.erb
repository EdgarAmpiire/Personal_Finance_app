<div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between mb-6">
  <h1 class="text-2xl font-semibold">Accounts</h1>

  <%= link_to "New account", new_account_path,
        class: "inline-flex items-center justify-center rounded-lg bg-slate-900 text-white px-4 py-2.5 text-sm font-medium
                hover:bg-slate-800 w-full sm:w-auto" %>
</div>

<% if @accounts.any? %>
  <div class="space-y-3">
    <% @accounts.each do |account| %>
      <div class="rounded-xl border bg-white p-4">
        <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
          <!-- Left: account info -->
          <div class="min-w-0">
            <div class="font-medium truncate">
              <%= link_to account.name, account_path(account), class: "hover:underline" %>
            </div>
            <div class="text-sm text-gray-600 break-words"><%= account.account_type %></div>
          </div>

          <!-- Right: balance + actions -->
          <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-end sm:gap-3">
            <div class="font-semibold text-lg sm:text-base whitespace-nowrap">
              <%= number_to_currency(account.balance) %>
            </div>

            <div class="flex flex-col gap-2 sm:flex-row sm:gap-2">
              <%= link_to "Edit", edit_account_path(account),
                    class: "inline-flex items-center justify-center rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm
                            hover:bg-slate-50 w-full sm:w-auto" %>

              <%= button_to "Delete", account_path(account),
                    method: :delete,
                    class: "inline-flex items-center justify-center rounded-lg bg-red-600 text-white px-3 py-2 text-sm
                            hover:bg-red-700 w-full sm:w-auto",
                    data: { turbo_confirm: "Delete this account? This will also delete its transactions." } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="rounded-xl border bg-white p-6">
    <p class="text-gray-600">No accounts yet. Create one to get started.</p>
  </div>
<% end %>