<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-semibold">Accounts</h1>
  <%= link_to "New account", new_account_path, class: "rounded bg-black text-white px-4 py-2" %>
</div>

<div class="space-y-3">
  <% @accounts.each do |account| %>
    <div class="rounded border p-4 flex items-center justify-between">
      <div>
        <div class="font-medium"><%= link_to account.name, account %></div>
        <div class="text-sm text-gray-600"><%= account.account_type %></div>
      </div>
      <div class="font-semibold">
        <%= number_to_currency(account.balance) %>
      </div>
    </div>
  <% end %>
</div>
