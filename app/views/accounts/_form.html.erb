<%= form_with model: @account, class: "space-y-4 w-full max-w-xl" do |f| %>
  <div>
    <%= f.label :name, class: "block text-sm font-medium mb-1" %>
    <%= f.text_field :name, class: "w-full rounded border p-2" %>
    <% @account.errors.full_messages_for(:name).each do |msg| %>
      <p class="text-sm text-red-600 mt-1"><%= msg %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :account_type, class: "block text-sm font-medium mb-1" %>
    <%= f.text_field :account_type, placeholder: "Cash, Bank, Mobile Money...",
          class: "w-full rounded border p-2" %>
    <% @account.errors.full_messages_for(:account_type).each do |msg| %>
      <p class="text-sm text-red-600 mt-1"><%= msg %></p>
    <% end %>
  </div>

  <div>
  <%= f.label :starting_balance, "Starting Balance (UGX)", class: "block text-sm font-medium mb-1" %>
  <%= f.text_field :starting_balance, class: "w-full rounded border p-2", placeholder: "1000000" %>
</div>

  <div class="flex gap-2">
    <%= f.submit class: "rounded bg-black text-white px-4 py-2 cursor-pointer" %>
    <%= link_to "Cancel", accounts_path, class: "rounded border px-4 py-2" %>
  </div>
<% end %>
