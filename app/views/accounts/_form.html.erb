<%= form_with model: @account, class: "space-y-5 w-full max-w-md sm:max-w-lg lg:max-w-xl" do |f| %>
  <div>
    <%= f.label :name, class: "block text-sm font-medium mb-1" %>
    <%= f.text_field :name,
          class: "w-full rounded-lg border border-slate-300 bg-white px-3 py-2.5 text-base
                  focus:outline-none focus:ring-2 focus:ring-slate-900/20 focus:border-slate-400" %>
    <% @account.errors.full_messages_for(:name).each do |msg| %>
      <p class="text-sm text-red-600 mt-1"><%= msg %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :account_type, class: "block text-sm font-medium mb-1" %>
    <%= f.text_field :account_type,
          placeholder: "Cash, Bank, Mobile Money...",
          class: "w-full rounded-lg border border-slate-300 bg-white px-3 py-2.5 text-base
                  focus:outline-none focus:ring-2 focus:ring-slate-900/20 focus:border-slate-400" %>
    <% @account.errors.full_messages_for(:account_type).each do |msg| %>
      <p class="text-sm text-red-600 mt-1"><%= msg %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :starting_balance, "Starting Balance (UGX)", class: "block text-sm font-medium mb-1" %>
    <%= f.text_field :starting_balance,
          placeholder: "1000000",
          inputmode: "numeric",
          class: "w-full rounded-lg border border-slate-300 bg-white px-3 py-2.5 text-base
                  focus:outline-none focus:ring-2 focus:ring-slate-900/20 focus:border-slate-400" %>
    <% @account.errors.full_messages_for(:starting_balance).each do |msg| %>
      <p class="text-sm text-red-600 mt-1"><%= msg %></p>
    <% end %>
  </div>

  <div class="flex flex-col sm:flex-row sm:items-center gap-3 pt-2">
    <%= f.submit "Save",
          class: "w-full sm:w-auto rounded-lg bg-slate-900 text-white px-5 py-2.5 text-sm font-medium
                  hover:bg-slate-800 active:bg-slate-900 cursor-pointer" %>

    <%= link_to "Cancel", accounts_path,
          class: "w-full sm:w-auto text-center rounded-lg border border-slate-300 bg-white px-5 py-2.5 text-sm font-medium
                  hover:bg-slate-50" %>
  </div>
<% end %>