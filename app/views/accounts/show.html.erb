<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col gap-4 sm:flex-row sm:items-start sm:justify-between">
    <div class="min-w-0">
      <h1 class="text-2xl sm:text-3xl font-semibold truncate"><%= @account.name %></h1>
      <p class="text-gray-600 break-words"><%= @account.account_type %></p>
    </div>

    <div class="sm:text-right">
      <div class="text-sm text-gray-600">Balance</div>
      <div class="text-2xl sm:text-3xl font-semibold whitespace-nowrap">
        <%= number_to_currency(@account.balance) %>
      </div>
    </div>
  </div>

  <!-- Section header -->
  <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
    <h2 class="text-lg font-semibold">Recent Transactions</h2>

    <%= link_to "New transaction", new_transaction_path,
          class: "inline-flex items-center justify-center rounded-lg bg-slate-900 text-white px-4 py-2.5 text-sm font-medium
                  hover:bg-slate-800 w-full sm:w-auto" %>
  </div>

  <% if @transactions.any? %>
    <div class="rounded-xl border bg-white overflow-x-auto">
      <table class="min-w-full text-sm">
        <thead class="bg-gray-50">
          <tr>
            <th class="text-left p-3 whitespace-nowrap">Date</th>
            <th class="text-left p-3">Description</th>
            <th class="text-left p-3 whitespace-nowrap">Category</th>
            <th class="text-right p-3 whitespace-nowrap">Amount</th>
          </tr>
        </thead>

        <tbody>
          <% @transactions.each do |t| %>
            <tr class="border-t hover:bg-gray-50">
              <td class="p-3 whitespace-nowrap text-gray-700"><%= t.occurred_on %></td>

              <td class="p-3 min-w-[14rem]">
                <%= link_to t.description, t, class: "hover:underline break-words" %>
              </td>

              <td class="p-3 whitespace-nowrap text-gray-700"><%= t.category&.name || "-" %></td>

              <td class="p-3 text-right whitespace-nowrap font-medium">
                <%= number_to_currency(t.amount_cents / 100.0) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="rounded-xl border bg-white p-6">
      <p class="text-gray-600">No transactions yet for this account.</p>
    </div>
  <% end %>
</div>