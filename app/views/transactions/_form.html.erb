<% @accounts ||= current_user.accounts.order(:name) %>
<% @categories ||= current_user.categories.order(:name) %>

<div class="w-full max-w-3xl">
  <%= form_with model: @transaction, class: "space-y-4" do |f| %>
    <!-- Date -->
    <div>
      <%= f.label :occurred_on, class: "block text-sm font-medium mb-1" %>
      <%= f.date_field :occurred_on,
            class: "w-full rounded border px-3 py-2 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-slate-300" %>
      <% @transaction.errors.full_messages_for(:occurred_on).each do |msg| %>
        <p class="text-sm text-red-600 mt-1"><%= msg %></p>
      <% end %>
    </div>

    <!-- Description -->
    <div>
      <%= f.label :description, class: "block text-sm font-medium mb-1" %>
      <%= f.text_field :description,
            class: "w-full rounded border px-3 py-2 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-slate-300" %>
      <% @transaction.errors.full_messages_for(:description).each do |msg| %>
        <p class="text-sm text-red-600 mt-1"><%= msg %></p>
      <% end %>
    </div>

    <!-- Account -->
    <div>
      <%= f.label :account_id, "Account", class: "block text-sm font-medium mb-1" %>
      <%= f.collection_select :account_id, @accounts, :id, :name, {},
            class: "w-full rounded border px-3 py-2 text-sm sm:text-base bg-white focus:outline-none focus:ring-2 focus:ring-slate-300" %>
      <% @transaction.errors.full_messages_for(:account).each do |msg| %>
        <p class="text-sm text-red-600 mt-1"><%= msg %></p>
      <% end %>
    </div>

    <!-- Category -->
    <div>
      <%= f.label :category_id, "Category (optional)", class: "block text-sm font-medium mb-1" %>
      <%= f.collection_select :category_id, @categories, :id, :name, { include_blank: true },
            class: "w-full rounded border px-3 py-2 text-sm sm:text-base bg-white focus:outline-none focus:ring-2 focus:ring-slate-300" %>
    </div>

    <!-- Amount -->
    <div>
      <%= f.label :amount, "Amount (use '-' for expenses)", class: "block text-sm font-medium mb-1" %>
      <%= f.number_field :amount,
            step: "0.01",
            value: (@transaction.amount_cents ? (@transaction.amount_cents / 100.0) : nil),
            class: "w-full rounded border px-3 py-2 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-slate-300" %>
      <% @transaction.errors.full_messages_for(:amount_cents).each do |msg| %>
        <p class="text-sm text-red-600 mt-1"><%= msg %></p>
      <% end %>
    </div>

    <!-- Actions -->
    <div class="flex flex-col sm:flex-row gap-2 sm:items-center">
      <%= f.submit class: "w-full sm:w-auto rounded bg-black text-white px-4 py-2 cursor-pointer" %>
      <%#= link_to "Cancel", transactions_path, class: "w-full sm:w-auto rounded border px-4 py-2 text-center" %>
    </div>
  <% end %>
</div>