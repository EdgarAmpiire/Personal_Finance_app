<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-semibold"><%= @transaction.description %></h1>
  <div class="flex gap-2">
    <%= link_to "Edit", edit_transaction_path(@transaction), class: "rounded border px-4 py-2" %>
    <%= button_to "Delete", @transaction, method: :delete,
          class: "rounded bg-red-600 text-white px-4 py-2",
          data: { turbo_confirm: "Delete this transaction?" } %>
  </div>
</div>

<div class="space-y-2">
  <div><span class="text-gray-600">Date:</span> <%= @transaction.occurred_on %></div>
  <div><span class="text-gray-600">Account:</span> <%= @transaction.account.name %></div>
  <div><span class="text-gray-600">Category:</span> <%= @transaction.category&.name || "-" %></div>
  <div><span class="text-gray-600">Amount:</span> <%= number_to_currency(@transaction.amount_cents / 100.0) %></div>
</div>
