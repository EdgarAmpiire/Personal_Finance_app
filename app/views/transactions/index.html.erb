<div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between mb-6">
  <h1 class="text-2xl font-semibold">Transactions</h1>
  <%= link_to "New transaction", new_transaction_path,
        class: "w-full sm:w-auto text-center rounded bg-black text-white px-4 py-2" %>
</div>

<!-- Filters -->
<div class="rounded border bg-white p-4 mb-6">
  <%= form_with url: transactions_path, method: :get,
        class: "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4" do %>

    <div>
      <label class="block text-sm font-medium mb-1">Category</label>
      <%= select_tag :category_id,
          options_from_collection_for_select(@categories, :id, :name, params[:category_id]),
          include_blank: "All",
          class: "w-full rounded border px-3 py-2 text-sm sm:text-base bg-white focus:outline-none focus:ring-2 focus:ring-slate-300" %>
    </div>

    <div>
      <label class="block text-sm font-medium mb-1">From</label>
      <%= date_field_tag :from, params[:from],
          class: "w-full rounded border px-3 py-2 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-slate-300" %>
    </div>

    <div>
      <label class="block text-sm font-medium mb-1">To</label>
      <%= date_field_tag :to, params[:to],
          class: "w-full rounded border px-3 py-2 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-slate-300" %>
    </div>

    <div class="flex flex-col sm:flex-row sm:items-end gap-2">
      <%= submit_tag "Filter",
          class: "w-full sm:w-auto rounded bg-black text-white px-4 py-2 cursor-pointer" %>
      <%= link_to "Reset", transactions_path,
          class: "w-full sm:w-auto text-center rounded border px-4 py-2" %>
    </div>
  <% end %>
</div>

<!-- Mobile: cards -->
<div class="space-y-3 sm:hidden">
  <% @transactions.each do |t| %>
    <div class="rounded-xl border bg-white p-4">
      <div class="flex items-start justify-between gap-3">
        <div class="min-w-0">
          <div class="text-sm text-gray-500"><%= t.occurred_on %></div>
          <div class="font-medium truncate">
            <%= link_to t.description, t, class: "hover:underline" %>
          </div>
          <div class="text-sm text-gray-600 mt-1">
            <span class="font-medium">Account:</span> <%= t.account.name %>
          </div>
          <div class="text-sm text-gray-600">
            <span class="font-medium">Category:</span> <%= t.category&.name || "-" %>
          </div>
        </div>

        <div class="shrink-0 text-right">
          <div class="text-xs text-gray-500">Amount</div>
          <div class="font-semibold"><%= number_to_currency(t.amount_cents / 100.0) %></div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- Desktop/tablet: table -->
<div class="hidden sm:block overflow-x-auto rounded border bg-white">
  <table class="min-w-full text-sm">
    <thead class="bg-gray-50">
      <tr>
        <th class="text-left p-3 whitespace-nowrap">Date</th>
        <th class="text-left p-3">Description</th>
        <th class="text-left p-3 whitespace-nowrap">Account</th>
        <th class="text-left p-3 whitespace-nowrap">Category</th>
        <th class="text-right p-3 whitespace-nowrap">Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |t| %>
        <tr class="border-t hover:bg-gray-50">
          <td class="p-3 whitespace-nowrap"><%= t.occurred_on %></td>
          <td class="p-3">
            <%= link_to t.description, t, class: "hover:underline" %>
          </td>
          <td class="p-3 whitespace-nowrap"><%= t.account.name %></td>
          <td class="p-3 whitespace-nowrap"><%= t.category&.name || "-" %></td>
          <td class="p-3 text-right whitespace-nowrap"><%= number_to_currency(t.amount_cents / 100.0) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>