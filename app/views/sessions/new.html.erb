<div class="w-1/2 mx-auto">
  <h1 class="text-2xl font-semibold mb-6">Sign in</h1>

<%= form_with url: sign_in_path, class: "space-y-4" do %>
  <div>
    <label class="block text-sm font-medium mb-1">Email</label>
    <%= email_field_tag :email, params[:email], class: "w-full rounded border p-2" %>
  </div>

  <div>
    <label class="block text-sm font-medium mb-1">Password</label>
    <%= password_field_tag :password, nil, class: "w-full rounded border p-2" %>
  </div>

  <%= submit_tag "Sign in", class: "rounded bg-black text-white px-4 py-2 cursor-pointer" %>
<% end %>

<p class="mt-4 text-sm">
  New here?
  <%= link_to "Create an account", sign_up_path, class: "underline" %>
</p>

</div>
