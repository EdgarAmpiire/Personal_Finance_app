<div class="w-1/2 mx-auto">
  <h1 class="text-2xl font-semibold mb-6">Create account</h1>

<%= form_with model: @user, url: sign_up_path, class: "space-y-4" do |f| %>
  <div>
    <%= f.label :email, class: "block text-sm font-medium mb-1" %>
    <%= f.email_field :email, class: "w-full rounded border p-2" %>
    <% @user.errors.full_messages_for(:email).each do |msg| %>
      <p class="text-sm text-red-600 mt-1"><%= msg %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :password, class: "block text-sm font-medium mb-1" %>
    <%= f.password_field :password, class: "w-full rounded border p-2" %>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "block text-sm font-medium mb-1" %>
    <%= f.password_field :password_confirmation, class: "w-full rounded border p-2" %>
    <% @user.errors.full_messages_for(:password).each do |msg| %>
      <p class="text-sm text-red-600 mt-1"><%= msg %></p>
    <% end %>
  </div>

  <%= f.submit "Sign up", class: "rounded bg-black text-white px-4 py-2 cursor-pointer" %>
<% end %>

<p class="mt-4 text-sm">
  Already have an account?
  <%= link_to "Sign in", sign_in_path, class: "underline" %>
</p>

</div>
